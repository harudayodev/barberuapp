<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title row with dropdown arrow -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            tools:ignore="UseCompoundDrawables">

            <TextView
                android:id="@+id/history_item_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Haircut #1"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <ImageView
                android:id="@+id/arrow_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_down"
                android:contentDescription="Expand/Collapse arrow"
                android:tint="@color/black"
                tools:ignore="HardcodedText,UseAppTint" />
        </LinearLayout>

        <!-- Expandable details -->
        <LinearLayout
            android:id="@+id/history_item_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/haircut_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Haircut: Fade"
                android:textSize="16sp"
                android:textColor="#555555"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/color_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Color: None"
                android:textSize="16sp"
                android:textColor="#555555"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/barber_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Barber: John"
                android:textSize="16sp"
                android:textColor="#555555"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/price_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price: â‚±200"
                android:textSize="16sp"
                android:textColor="#555555"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/date_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date: 2025-10-01"
                android:textSize="16sp"
                android:textColor="#555555"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/status_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: Completed"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
