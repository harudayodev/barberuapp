<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    android:backgroundTint="#FFFFFF"
    app:strokeColor="#4A4A4A"
    app:strokeWidth="1dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <ImageView
            android:id="@+id/imgBarbershop"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:src="@drawable/location"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="ContentDescription,ImageContrastCheck" />

        <TextView
            android:id="@+id/tvBarbershopName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintStart_toEndOf="@id/imgBarbershop"
            app:layout_constraintTop_toTopOf="@id/imgBarbershop"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Classic Cuts Barbershop" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/status_chip_open"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:text="Closed"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/tvBarbershopName"
            app:layout_constraintTop_toBottomOf="@id/tvBarbershopName"
            tools:ignore="HardcodedText,TextContrastCheck"
            tools:text="Open" />

        <TextView
            android:id="@+id/tvHaircutAvailable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:background="@drawable/status_chip_haircut"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:text="Haircut available here"
            android:textColor="@android:color/white"
            android:textSize="11sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/tvStatus"
            app:layout_constraintBaseline_toBaselineOf="@id/tvStatus"
            android:visibility="gone"
            tools:ignore="HardcodedText" />


        <TextView
            android:id="@+id/tvDetails"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="3.2 km • 123 Main St, City"
            android:textColor="@color/black"
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tvStatus"
            app:layout_constraintTop_toBottomOf="@id/tvStatus"
            tools:text="2.4 km • 14 Market Ave, Quezon City"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:id="@+id/ratingLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@id/tvDetails"
            app:layout_constraintTop_toBottomOf="@id/tvDetails">

            <RatingBar
                android:id="@+id/shopRatingBar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:numStars="5"
                android:stepSize="0.1"
                android:theme="@style/Widget.AppCompat.RatingBar.Small"
                android:progressTint="#FFD700"
                tools:rating="1" />

            <TextView
                android:id="@+id/tvRatingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:textColor="@color/black"
                android:textSize="11sp"
                tools:text="4.5 (12 reviews)" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="end"
            android:weightSum="2"
            app:layout_constraintTop_toBottomOf="@id/ratingLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tvDetails"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDirections"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#009688"
                android:minWidth="0dp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:text="Directions"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                app:rippleColor="@color/teal_700"
                tools:ignore="HardcodedText,TextContrastCheck,VisualLintButtonSize" /> <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMenu"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Choose"
            android:textColor="@android:color/black"
            android:textSize="13sp"
            android:minWidth="0dp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:backgroundTint="#FFC107"
            app:rippleColor="@color/amber_800"
            tools:ignore="HardcodedText,VisualLintButtonSize" /> </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>