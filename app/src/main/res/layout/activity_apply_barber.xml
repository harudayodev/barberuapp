<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/apply_barber_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ApplyBarber">

    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.85"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/bgapp1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="32dp">

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="32dp"
                android:letterSpacing="0.02"
                android:text="Barber Application"
                android:textColor="@color/espresso"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/textViewSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:text="Fill out the form below to apply."
                android:textColor="@color/gunmentalgray"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewTitle"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/fname_input"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/roundc"
                android:backgroundTint="@color/lightshade"
                android:elevation="4dp"
                android:fontFamily="sans-serif"
                android:hint="First Name"
                android:inputType="textPersonName"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="@color/white"
                android:textColorHint="@color/light_gray"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewSubtitle"
                tools:ignore="Autofill,HardcodedText,TextContrastCheck,VisualLintTextFieldSize" />

            <EditText
                android:id="@+id/lname_input"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/roundc"
                android:backgroundTint="@color/lightshade"
                android:elevation="4dp"
                android:fontFamily="sans-serif"
                android:hint="Last Name"
                android:inputType="textPersonName"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="@color/white"
                android:textColorHint="@color/light_gray"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fname_input"
                tools:ignore="Autofill,HardcodedText,TextContrastCheck,VisualLintTextFieldSize" />

            <EditText
                android:id="@+id/contact_input"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/roundc"
                android:backgroundTint="@color/lightshade"
                android:elevation="4dp"
                android:fontFamily="sans-serif"
                android:hint="Contact Number"
                android:inputType="phone"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="@color/white"
                android:textColorHint="@color/light_gray"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lname_input"
                tools:ignore="Autofill,HardcodedText,TextContrastCheck,VisualLintTextFieldSize" />

            <EditText
                android:id="@+id/address_input"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/roundc"
                android:backgroundTint="@color/lightshade"
                android:elevation="4dp"
                android:fontFamily="sans-serif"
                android:hint="Address"
                android:inputType="textPostalAddress"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="@color/white"
                android:textColorHint="@color/light_gray"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/contact_input"
                tools:ignore="Autofill,HardcodedText,TextContrastCheck,VisualLintTextFieldSize" />

            <EditText
                android:id="@+id/email_input"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/roundc"
                android:backgroundTint="@color/lightshade"
                android:elevation="4dp"
                android:fontFamily="sans-serif"
                android:hint="Email Address"
                android:inputType="textEmailAddress"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="@color/white"
                android:textColorHint="@color/light_gray"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/address_input"
                tools:ignore="Autofill,HardcodedText,TextContrastCheck,VisualLintTextFieldSize" />

            <Spinner
                android:id="@+id/barbershop_spinner"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/roundc"
                android:backgroundTint="@color/lightshade"
                android:elevation="4dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/email_input" />

            <FrameLayout
                android:id="@+id/resume_upload_container"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/barbershop_spinner">

                <Button
                    android:id="@+id/resume_upload_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/lightshade"
                    android:elevation="4dp"
                    android:fontFamily="sans-serif"
                    android:gravity="center_vertical|start"
                    android:paddingStart="20dp"
                    android:paddingEnd="60dp"
                    android:text="Upload Resume (Image)"
                    android:textAllCaps="false"
                    android:textColor="@color/light_gray"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText,TextContrastCheck,VisualLintButtonSize" />

                <ImageButton
                    android:id="@+id/clear_resume_btn"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Clear image selection"
                    android:elevation="5dp"
                    android:src="@drawable/ic_close"
                    android:visibility="gone"
                    app:tint="@color/light_gray"
                    tools:ignore="HardcodedText,ImageContrastCheck"
                    tools:visibility="visible" />

            </FrameLayout>

            <Button
                android:id="@+id/submit_btn"
                android:layout_width="220dp"
                android:layout_height="55dp"
                android:layout_marginTop="24dp"
                android:backgroundTint="@color/espresso"
                android:elevation="6dp"
                android:fontFamily="sans-serif-medium"
                android:text="Submit Application"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/resume_upload_container"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/return_btn"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/espresso"
                android:elevation="6dp"
                android:fontFamily="sans-serif-medium"
                android:text="Return"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/submit_btn"
                tools:ignore="HardcodedText" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>