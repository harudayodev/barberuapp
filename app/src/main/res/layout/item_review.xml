<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardElevation="6dp"
    app:cardCornerRadius="16dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header row with customer name and arrow -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            tools:ignore="UseCompoundDrawables">

            <TextView
                android:id="@+id/customer_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Customer: John Doe"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                tools:ignore="HardcodedText" />

            <ImageView
                android:id="@+id/arrow_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_down"
                android:contentDescription="Expand/Collapse"
                app:tint="@color/black"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <!-- Expandable details layout -->
        <LinearLayout
            android:id="@+id/review_details_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/haircut_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Haircut: Fade Cut"
                android:textSize="14sp"
                android:textColor="@color/dark_gray"
                android:layout_marginTop="2dp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/color_shave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Color/Shave: None"
                android:textSize="14sp"
                android:textColor="@color/dark_gray"
                android:layout_marginTop="2dp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/price_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price: 250.00"
                android:textSize="14sp"
                android:textColor="@color/dark_gray"
                android:layout_marginTop="2dp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/date_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date: 2025-10-12"
                android:textSize="13sp"
                android:textColor="@color/gray"
                android:layout_marginTop="2dp"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <RatingBar
                    android:id="@+id/rating_stars"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="0.5"
                    android:rating="0"
                    android:isIndicator="true"
                    android:progressTint="@android:color/holo_orange_light"
                    android:secondaryProgressTint="@android:color/holo_orange_light"/>

                <TextView
                    android:id="@+id/rating_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="8dp"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <TextView
                android:id="@+id/review_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Review content goes here..."
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
