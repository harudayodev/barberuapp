<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    android:backgroundTint="@color/white"
    app:strokeColor="#4A4A4A"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <ImageView
            android:id="@+id/imgBarber"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/barbericon"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tvBarberName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/imgBarber"
            app:layout_constraintTop_toTopOf="@id/imgBarber"
            app:layout_constraintEnd_toStartOf="@id/btnChooseBarber"
            app:layout_constraintHorizontal_bias="0"
            tools:text="John Doe" />

        <LinearLayout
            android:id="@+id/ratingLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toStartOf="@id/btnChooseBarber"
            app:layout_constraintStart_toStartOf="@id/tvBarberName"
            app:layout_constraintTop_toBottomOf="@id/tvBarberName">

            <RatingBar
                android:id="@+id/barberRatingBar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:numStars="5"
                android:progressTint="#FFD700"
                android:stepSize="0.1"
                tools:rating="4.2" />

            <TextView
                android:id="@+id/tvRatingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:textColor="@color/black"
                android:textSize="11sp"
                tools:text="4.2 (8 reviews)" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvAvailability"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="none"
            android:maxLines="3"
            android:scrollHorizontally="false"
            android:singleLine="false"
            android:text="Available on: Monday, Tuesday, Wednesday, Thursday"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@id/btnChooseBarber"
            app:layout_constraintStart_toStartOf="@id/tvBarberName"
            app:layout_constraintTop_toBottomOf="@id/ratingLayout"
            tools:ignore="HardcodedText"
            tools:text="Available on: Monday, Tuesday, Wednesday, Thursday, Friday" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnChooseBarber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose"
            android:textSize="13sp"
            android:backgroundTint="#FFC107"
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/imgBarber"
            app:layout_constraintBottom_toBottomOf="@id/imgBarber"
            tools:ignore="HardcodedText" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>